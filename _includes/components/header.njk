<div class="fixed top-0 left-0 z-10 w-full "> 
    <nav class="fixed top-0 left-0 right-0 z-20 flex items-center h-16 px-0 py-2 transition-colors duration-200 bg-white border-b border-gray-100 md:h-20 dark:bg-gray-900 dark:bg-dark dark:border-gray-800">
      <div class="hidden w-full p-4 space-y-4 md:block">
        <a class="items-center font-bold text-gray-600 no-underline hover:text-gray-800 dark:text-gray-500" href="/">
          <span class="text-xl">{{ site.name }}</span>
          {% if site.subtitle %}
          <span class="block w-full text-xs font-normal text-gray-500 hover:text-gray-600 dark:text-gray-600 sm:text-xs md:text-sm lg:text-base"> {{ site.subtitle }}</span>
          {% endif %}
         </a>
      </div>
      <div class="relative w-full mr-2 md:w-64">
       {% if site.enableSearch == 1 %}
        <input  aria-label="Search" x-data="{ isOpen: true }" x-bind:class="{ 'hidden': !isOpen }" type="search" placeholder="Search..." class="px-2 py-2 ml-2 leading-tight placeholder-gray-300 border border-gray-200 rounded appearance-none w-60 bg-gray-50 dark:bg-gray-800 dark:border-gray-700 focus:ring-4 focus:ring-blue-200 dark:focus:ring-gray-700 ring-opacity-50" id="searchField">
        <ul tabindex="0" class="absolute left-0 w-full p-0 m-0 mt-1 list-none bg-white rounded shadow-md md:right-0 top-100 z-2" id="searchResults"></ul>
        <div class="absolute left-0 hidden p-4 m-0 mt-1 list-none bg-white border divide-y divide-gray-300 rounded shadow-md md:right-0 top-100 z-2" id="noResultsFound">
          <p>No results found.</p>
        </div>
        {% endif %}
      </div>
      
      
       <button  aria-label="Show navigation" onclick="showNavigation()" class="block mr-3 md:hidden"><svg fill="none" width="24" height="24" viewBox="0 0 24 24" class="text-gray-400 hover:text-gray-600" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg></button>
       
        {% if site.enableDarkMode == 1 %}
        <a aria-label="dark mode" rel="noopener noreferrer" class="mr-3 text-current cursor-pointer switch" onclick="activateDarkMode()"><svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 16 16" height="24" xmlns="http://www.w3.org/2000/svg"><path class="text-gray-400 hover:text-yellow-400 dark:text-yellow-400" fill-rule="evenodd" clip-rule="evenodd" d="M11.67 8.658a3.661 3.661 0 0 0-.781 1.114 3.28 3.28 0 0 0-.268 1.329v1.6a1.304 1.304 0 0 1-.794 1.197 1.282 1.282 0 0 1-.509.102H7.712a1.285 1.285 0 0 1-.922-.379 1.303 1.303 0 0 1-.38-.92v-1.6c0-.479-.092-.921-.274-1.329a3.556 3.556 0 0 0-.776-1.114 4.689 4.689 0 0 1-1.006-1.437A4.187 4.187 0 0 1 4 5.5a4.432 4.432 0 0 1 .616-2.27c.197-.336.432-.64.705-.914a4.6 4.6 0 0 1 .911-.702c.338-.196.7-.348 1.084-.454a4.45 4.45 0 0 1 1.2-.16 4.476 4.476 0 0 1 2.276.614 4.475 4.475 0 0 1 1.622 1.616 4.438 4.438 0 0 1 .616 2.27c0 .617-.117 1.191-.353 1.721a4.69 4.69 0 0 1-1.006 1.437zM9.623 10.5H7.409v2.201c0 .081.028.15.09.212a.29.29 0 0 0 .213.09h1.606a.289.289 0 0 0 .213-.09.286.286 0 0 0 .09-.212V10.5z"></path></svg></a>
       {% endif %}

        {% if site.enabledEncryption == 1 %} 
         <button  aria-label="Logout" onclick="logout()" class="block mr-3">
         {# <svg fill="none" width="24" height="24" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg> #}
        <svg  width="24" height="24"  xmlns='http://www.w3.org/2000/svg' class='text-gray-400 ionicon hover:text-red-800' viewBox='0 0 512 512'><title>Close Circle</title><path d='M448 256c0-106-86-192-192-192S64 150 64 256s86 192 192 192 192-86 192-192z' fill='none' stroke='currentColor' stroke-miterlimit='10' stroke-width='32'/><path fill='none' stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' stroke-width='32' d='M320 320L192 192M192 320l128-128'/></svg>
        </button>
       {% endif %}
    </nav>  
 </div>


  